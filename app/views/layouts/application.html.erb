<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? content_for(:title) : 'Board Prototype' %></title>
    <%= yield(:head) %>

	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="content">
		<%- flash.each do |name, msg| -%>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>      
		
		<%= yield %>
	</div>
</body>
</html>
