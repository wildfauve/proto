<% title "Edit member" %>

<div data-role="content">
	<%= form_for :memberandprod, :url => member_path(@member), :method => :put do |form| %>
		<% if @member.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

				<ul>
					<% @member.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%= form.fields_for @member do |f| %>

			<div class="field">
				<%= f.label :name %><br />
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.label :card_num %><br />
				<%= f.number_field :card_num %>
			</div>
		<% end %>

		<div data-role="fieldcontains">
			<fieldset data-role="controlgroup">
				<%= form.fields_for :products do |f| %>
					<% Product.all.each do |prod| %>
						<p>
							<%= f.check_box prod.id, :checked => @member.offered?(prod), "type" => "checkbox" -%> 
							<%= f.label prod.id, prod.name -%>
						</p>
					<% end %>
	
				<% end %>
			</fieldset>
		</div>

		<div class="actions">
			<%= form.submit "update member" %>
		</div>
	<% end %>

</div>
<%= link_to 'Show', @member, "data-role" => "button", "data-icon" => "gear" %>
<%= link_to 'Back', members_path, "data-role" => "button", "data-icon" => "back" %>
